{
  "name": "Epic Poker Real Names",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Inserts players real names above their user names in the blockchain.poker interface",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "https://blockchain.poker/*",
    "activeTab"
  ],
  "web_accessible_resources": [
    "add_real_names.js"
  ],
  "icons": { 
    "48": "images/icon48.png",
    "128": "images/icon128.png" 
  }
}